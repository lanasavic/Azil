<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_centerVertical="true"
    android:background="@drawable/textlines"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:scaleType="fitXY"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imgZivotinja"
            app:srcCompat="@mipmap/ic_paw" />
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvImeZivotinje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toStartOf="@id/imageButtonAdopt"
            android:gravity="center"
            android:text="@string/holder_Ime"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tvOpisZivotinje"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvImeZivotinje"
            android:layout_toStartOf="@id/imageButtonAdopt"
            android:padding="5dp"
            android:text="@string/holder_Opis" />

        <ImageButton
            android:id="@+id/imageButtonAdopt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@android:color/transparent"
            android:onClick="imageButtonAdopt"
            android:src="@drawable/ic_heart_red_outline" />

    </RelativeLayout>
</LinearLayout>